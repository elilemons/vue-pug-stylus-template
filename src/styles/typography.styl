/* Variables */
default-space = 1.5rem
/* Setup */
html
  /* Change defaulttypefaces here */
  font-family serif
  font-size 137.5%
    -webkit-font-smoothing antialiased
  color #333333
/* Copy & Lists */
p
  line-height default-space
  margin-top default-space
  margin-bottom 0

ul, ol
  margin-top default-space
  margin-bottom default-space

ul li, ol li
  line-height default-space

ul ul, ol ul, ul ol, ol ol
  margin-top 0
  margin-bottom 0

blockquote
  line-height default-space
  margin-top default-space
  margin-bottom default-space

/* Headings */
h1, h2, h3, h4, h5, h6
  /* Change heading typefaces here */
  font-family sans-serif
  margin-top default-space
  margin-bottom 0
  line-height default-space

h1
  font-size 4.242rem
  line-height 4.5rem
  margin-top 3rem

h2
  font-size 2.828rem
  line-height 3rem
  margin-top 3rem

h3
  font-size 1.414rem

h4
  font-size 0.707rem

h5
  font-size 0.4713333333333333rem

h6
  font-size 0.3535rem

/* Tables */
table
  margin-top default-space
  border-spacing 0px
  border-collapse collapse

table td, table th
  padding 0
  line-height 33px

/* Code blocks */
code
  vertical-align bottom

/* Leading paragraph text */
.lead
  font-size 1.414rem

  /* Hug the block above you */
.hug
  margin-top 0